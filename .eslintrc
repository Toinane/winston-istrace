{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [ "error", 2 ],
    "linebreak-style": [ "error", "unix" ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ],
    "no-await-in-loop": [ "error" ],
    "strict": [ "error" ],
    "no-alert": [ "error" ],
    "block-spacing": [ "warn" ],
    "brace-style": [ "error" ],
    "no-var": [ "error" ],
    "no-else-return": [
      "error",
      { "allowElseIf": true }
    ],
    "no-multi-spaces": [ "error" ],
    "no-magic-numbers": [
      "error",
      { "ignore": [1], "ignoreArrayIndexes": true }
    ]
  }
}